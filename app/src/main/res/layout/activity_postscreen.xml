<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- アイコン-->
            <ImageView
                android:id="@+id/resulticon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultfirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性" />

                <TextView
                    android:id="@+id/resultlastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名" />

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/resultTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:text="2019年12月30日"
            android:textSize="11sp"/>


        <!-- 押すとお店の詳細に遷移-->
        <Button
            android:id="@+id/resultstorename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店名"/>

        <!-- 投稿の説明 -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投稿の説明" />

        <!-- 写真-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/resultImage01"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />
            　
            <ImageView
                android:id="@+id/resultImage02"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>